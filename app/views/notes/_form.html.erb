<div data-controller="note" data-action="codemirror:blur@document->note#save">
  <%= form_with(model: note) do |form| %>
    <% if note.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

        <ul>
          <% note.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.text_area :content, class: 'w-full p-4 resize-none', data: {controller: 'codemirror'} %>
    </div>

    <%= form.submit class: 'hidden', data: {note_target: 'submit'} %>
  <% end %>
</div>